<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPeopleFragment">


    <TextView

        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="카드 뽑기"
        android:textColor="@color/black"
        android:fontFamily="@font/jalnan"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        />



    <EditText

        android:id="@+id/people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:hint="인원을 입력해주세요\n(최소 2인 ~ 최대 4인)"

        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:background="@null"
        android:textSize="20sp"


        android:layout_marginTop="30sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />


    <Button

        android:id="@+id/selectCalBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"

        android:text="  카드 보기  "
        android:textSize="20sp"
        android:fontFamily="@font/jalnan"
        android:padding="15dp"

        android:layout_marginTop="30sp"

        app:layout_constraintTop_toBottomOf="@id/people"

        app:layout_constraintEnd_toEndOf="@id/people"
        app:layout_constraintStart_toStartOf="@id/people"
        />

</androidx.constraintlayout.widget.ConstraintLayout>