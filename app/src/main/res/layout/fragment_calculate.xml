<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/money"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="N빵 계산"
        android:textColor="@color/black"
        android:fontFamily="@font/jalnan"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        />
    <EditText
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="금액을 입력해주세요"

        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:background="@null"
        android:textSize="20sp"

        android:layout_marginTop="30sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />


    <EditText

        android:id="@+id/people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="인원을 입력해주세요"
        android:maxLength="1"

        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:background="@null"
        android:textSize="20sp"


        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/money"
        />



    <Button

        android:id="@+id/selectCalBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"

        android:text="  결과 보기  "
        android:textSize="20sp"
        android:fontFamily="@font/jalnan"
        android:padding="15dp"

        android:layout_marginTop="30sp"

        app:layout_constraintEnd_toEndOf="@id/people"
        app:layout_constraintStart_toStartOf="@id/people"
        app:layout_constraintTop_toBottomOf="@id/people"
        />

</androidx.constraintlayout.widget.ConstraintLayout>